{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "space-before-function-paren": ["warn", "always"],
    "no-console": "off",
    "object-curly-spacing": ["warn", "always"],
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-debugger": "off"
  }
}
